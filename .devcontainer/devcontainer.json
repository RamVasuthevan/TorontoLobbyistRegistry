{
    "name": "Python-Flask env",
    "customizations": {
        "vscode": {
            "extensions": [
                "yy0931.vscode-sqlite3-editor",
                "ms-python.python",
                "GitHub.copilot",
                "ms-python.black-formatter"
            ],
            "settings": {
                "terminal.integrated.profiles.linux": {
                    "pipenv": {
                        "path": "/usr/bin/bash",
                        "args": ["-c", "pipenv shell"]
                    }
                },
                "terminal.integrated.defaultProfile.linux": "pipenv",
                "python.pythonPath": "${workspaceFolder}/.venv/bin/python"
            }
        }
    },
    "postCreateCommand": "pipenv install --dev"
}
